<!DOCTYPE html>
<html lang="es">
<%- include('partials/head') %>

<body class="bg-white">
    <%- include('partials/headerUser') %>

    <section class="container bg-light pb-5 change-pass">
        <article class="box-center">
            <div class=" text-center ">
                <hr class="mx-auto m-12" size="5" noshade="noshade" width="100%" />
                <h4>
                    <%= title %>
                </h4>
                <hr class="mx-auto m-12 " size="5 " noshade="noshade " width="100% " />
            </div>
            <form class="container" action="/users/<%=user.id%>/pass?_method=PUT" method="POST">
                <div class=" bg-white border border-1">

                    <% if (typeof error != 'undefined') { %>
                        <div class="alert alert-danger ">
                            <span><%= error %> </span>
                        </div>
                    <% } %>
                                       
                    <!-- current password -->
                    <div class="row mx-auto mb-3 ">
                        <div class=" mx-auto col-sm-10 col-md-9 col-lg-8 col-xl-6  ">
                            <input type="password" class="form-control" placeholder="contraseña actual" name="currentPassword">
                        </div>
                    </div>

                    <!-- new password -->
                    <div class="row mx-auto mb-3 ">
                        <div class=" mx-auto col-sm-10 col-md-9 col-lg-8 col-xl-6  ">
                            <input type="password" class="form-control" placeholder="nueva contraseña" name="newPassword">
                        </div>
                    </div>

                    <!-- confirm new password -->
                    <div class="row mx-auto mb-3 ">
                        <div class=" mx-auto col-sm-10 col-md-9 col-lg-8 col-xl-6  ">
                            <input type="password" class="form-control" placeholder="confirmar nueva contraseña" name="confirmPassword">
                        </div>
                    </div>                 
                    
                    
                    <div class="row mx-auto pb-5">
                        <a class="btn col-6 col-xl-4 bg-danger mx-auto" href="/users/<%= user.id%>">Cancelar</a>
                        <div class="col-6 col-xl-4 mx-auto">
                            <button class="btn col-12 btn btn-primary" type="submit">Guardar cambios</button>
                        </div>
                    </div>
                </div>

            </form>

        </article>
    </section>

    <%- include('partials/scripts')  %>
	<%- include('partials/footer')  %>
</body>

</html>