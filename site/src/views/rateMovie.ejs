<!DOCTYPE html>
<html lang="es">
<%- include('partials/head')  %>

<body class="bg-white">
	<%- include('partials/headerUser')  %>

	<main class="row row-cols-1 row-cols-md-2 g-4" style="padding: 3%;">
		<img src="/images/movies/<%= rent.movie.image %>" class="img-fluid" alt="<%= rent.movie.title %>">
		<div class="card">
			<div class="card-body">
				<h4>Califica: <%= rent.movie.title %></h4>

				
				
				<form action="/rents/<%= rent.id %>?_method=PUT" method="POST">
					<div class="row">
						<select name="rating" class="col-6">
							<% ratingScale.forEach(rating => { %>				
							<option value="<%= rating.num %>">
								<%= rating.name %>
							</option>
							<% }) %>
						</select>
					</div>					
	
					<div class="row">
						<button class="col-6 btn btn-sm btn btn-success mb-2" type="submit">
							Enviar
						</button>
					</div>
				</form>

			</div>
						 
		</div>
	</main>

	<%- include('partials/scripts')  %>
	<%- include('partials/footer')  %>
</body>



</html>