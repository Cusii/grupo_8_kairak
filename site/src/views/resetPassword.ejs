<!DOCTYPE html>
<html lang="es">
<%- include('partials/head')  %>

<body class="bg-white">
	<% if (typeof userLogin != 'undefined') { %>
		<%- include('partials/headerUser')  %>
	<% } else { %>
		<%- include('partials/header')  %>
	<% } %>

	<section class="container bg-light pb-5">

		<div class=" text-center ">
			<hr class="mx-auto m-12" size="5" noshade="noshade" width="100%" />
			<h4>Restablezca su contrase単a</h4>
			<hr class="mx-auto m-12 " size="5 " noshade="noshade " width="90% " />
		</div>

		<form action="/users/reset/<%= user.id %> ?_method=PUT" method="POST">
			<div class=" bg-white border border-1">
				<div class="card-body border border-1">
					<img src="/images/logo-person.png" class="img-logo-person img-fluid m-3 rounded mx-auto d-block" alt="logo" width="150px">					

					<div class="mx-auto col-10 col-md-8 pb-3 mb-3">
						<input type="password" class="form-control " placeholder="Contrase単a" name="newPassword">
						<span class="text-danger"><%= (typeof errors != 'undefined' &&  errors.password)?errors.password.msg: ""%> </span>
					</div>

                    <div class=" mx-auto col-10 col-md-8  pb-3  mb-3">
						<input type="password" class="form-control " placeholder="Confirmar contrase単a" name="confirmNewPassword">						
					</div>					

					<div class="row mx-auto pb-5">
						<div class="row mx-auto pb-5">
							<button class="mx-auto col-4 col-md-5 btn btn-primary mb-5 " type="submit">Restablecer contrase単a</button>							

							<% if (typeof error != 'undefined') { %>
								<div class="alert alert-danger ">
									<span><%= error %> </span>
								</div>
							<% } %>
						</div>
					</div>

				</div>
			</div>
		</form>

	</section>

	<%- include('partials/scripts')  %>
	<%- include('partials/footer')  %>	
	
</body>

</html>