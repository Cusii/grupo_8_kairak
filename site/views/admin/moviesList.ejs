                    <hr class="mx-auto m-12" size="5" noshade="noshade" width="100%" />
                </div>

                <div class="row ">
                    <% movies.forEach(movie=> { %>
                        <div class="col-12 col-md-4 col-lg-3 mb-3">
                            <div class="card mx-auto" style="width: 98%">
                                <img src="/images/movies/<%= movie.image %> " class="card-img-top" alt="..." />
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <%= movie.title %>
                                    </h5>
                                    <p class="card-text">
                                        $
                                        <%= movie.price %>
                                    </p>


                                </div>
                                <ul class="list-group list-group-flush">
                                    <a href="#" class=" btn btn-outline-success fs-6 mb-2">Ver m√°s</a>
                                    <form action="/movies/<%= movie.id %>/edit">
                                        <button class="col-12 btn btn-sm btn-outline-primary mb-2" type="submit">Editar</button>
                                    </form>
                                    <form action="/movies/<%= movie.id %>?_method=DELETE" method="POST">
